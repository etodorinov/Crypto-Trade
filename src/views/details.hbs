<main>
  {{#if error}}
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    <div>
      <div class="errorContainer">
        <p>{{error.message}}</p>
      </div>
    </div>
  {{/if}}

  <section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
      <img src="{{business.image}}" />
    </div>

    <div class="coin-info">
      <div class="coin-text">
        <h1 id="name">{{business.name}}</h1>
        <h3 id="payment">Payment method: {{business.payment}}</h3>
        <p id="price"><span>Price: ${{business.price}}</span></p>
        <p id="description">{{business.description}}</p>
      </div>
      <div class="product-btn">
        {{#if user}}
          <!--Only for registered user and author of the publication -->
          {{#if isOwner}}
            <div class="author">
              <a
                href="/business/edit/{{business._id}}"
                class="btn-edit"
              >Edit</a>
              <a
                href="/business/remove/{{business._id}}"
                class="btn-delete"
              >Delete</a>
            </div>
          {{else}}
            {{#if hasBuyed}}
              <!-- Logged in user who has already buy this crypto-->
              <p class="buy-message">You already bought these crypto coins.</p>
            {{else}}
              <!-- Logged in user who has not yet buy this crypto-->
              <a href="/business/buy/{{business._id}}" class="btn-buy">Buy</a>
            {{/if}}
          {{/if}}
        {{/if}}
      </div>
    </div>
  </section>
</main>