<main>
    {{#if error}}
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    <div>
        <div class="errorContainer">
            <p>{{error.message}}</p>
        </div>
    </div>
    {{/if}}

    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form method="POST">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{business.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{business.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{business.price}}">
                <label>Description:</label>
                <textarea name="description" id="description">{{business.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="payment">
                    {{#each payment}}
                    <option value='{{value}}' {{selected}}>{{content}}</option>
                    {{/each}}
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>